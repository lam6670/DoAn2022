<!-- Slider Area End Here -->
<!-- Begin Banner With Category -->
<div class="banner-with-category">
    <div class="product-category-area section-space-top-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title text-center pb-55">
                        <span class="sub-title" style="color:#CD5C5C">See Our Latest</span>
                        <h2 class="title mb-0">Shop By Category</h2>
                    </div>
                    <div class="product-category-item">
                        <ul>
                            @foreach (var item in Model.Products)
                            {
                                <li class="nav-item" role="presentation">
                                    <a href="@item.category.CatName" target="_blank">
                                        <img src="~/images/categories/@item.category.Thumb" alt="@item.category.Title">
                                        @item.category.CatName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
<!-- Banner With Category End Here -->
<!-- Begin Product Area -->
<div class="product-area product-style-2 section-space-y-axis-100">
    <div class="container">
        <div class="section-title text-center pb-55">
            <span class="sub-title " style="color:#CD5C5C">See Our Latest</span>
            <h2 class="title mb-0">Tất cả sản phẩm</h2>
        </div>
        <div class="tab-content" id="myTabcontent">
            <div class=" tab-pane fade show active" role="tabpanel" aria-labelledby="all">

                @await Html.PartialAsync("_ListProductPartialView", allProduct)
            </div>
            @foreach (var item in Model.Products)
            {
                <div class=" tab-pane fade  " id="@item.category.CatName" role="tabpanel">

                    @await Html.PartialAsync("_ListProductPartialView", item.lsProducts)
                </div>
            }

        </div>
    </div>
</div>
